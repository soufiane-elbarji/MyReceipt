<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme - required for installSplashScreen() API -->
    <style name="Theme.MyReceipt" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MyReceipt.Main</item>
    </style>
    
    <!-- Main app theme applied after splash screen -->
    <style name="Theme.MyReceipt.Main" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
