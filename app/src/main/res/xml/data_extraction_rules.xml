<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+
    PRIVACY: We disable all cloud backup to keep data local-only.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Do not backup any app data to cloud -->
    </cloud-backup>
    <device-transfer>
        <!-- Allow device-to-device transfer for user convenience -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
